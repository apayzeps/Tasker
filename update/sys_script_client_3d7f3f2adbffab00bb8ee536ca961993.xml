<?xml version="1.0" encoding="UTF-8"?><record_update sys_domain="global" table="sys_script_client">
    <sys_script_client action="INSERT_OR_UPDATE">
        <active>true</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>shows the task order field based on two conditions:&#13;
- if the parent field is not empty &#13;
- if the parent task has more than 2 subtasks</description>
        <field>calchaschildren</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Tasker - OnLoad show/hide task_order </name>
        <order/>
        <script><![CDATA[function onLoad() {
	var parentID = g_form.getValue('parent');
	var ajax = new GlideAjax('ClientTaskInfo');
	ajax.addParam('parentID',parentID);
	ajax.addParam('sysparm_name', 'taskParentHasSubtasks');
	
	ajax.getXML(function ()	{
		var data = ajax.getAnswer();
		var numberOfParentChildren = data;
		
		if(parentID == "" || numberOfParentChildren < 2)
			g_form.setDisplay('task_order',false);
	});
}]]></script>
