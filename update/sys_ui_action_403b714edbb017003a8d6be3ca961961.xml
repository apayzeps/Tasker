        <script><![CDATA[var gdt = new GlideDateTime();
var now =  gdt.getDisplayValue();
var suspense_date_error;

if(current.assigned_to.nil()) {
	if(now > current.suspense_date && current.suspense_date != ""){
		gs.addErrorMessage('The suspense date must be in the future.');
	}else{
		current.update();
		gs.addErrorMessage(gs.getMessage(current.number + ': Task was assigned to an OU but not to an Assignee'));
		action.setRedirectURL(current);
	}
	//current.setAbortAction(true);
}
else{
// TODO: TO MOVE IT TO POPUP IN MULTILANGUAGE. KTORRES
	if(now > current.suspense_date && current.suspense_date != ""){
		gs.addErrorMessage('The suspense date must be in the future.');		
		

	}else{
		
	current.state = 1;
	current.work_notes = "Assigned to " + current.assigned_to.getDisplayValue();
	current.update();
	gs.addInfoMessage(current.number + ' has been assigned to ' + current.assigned_to.getDisplayValue());
	action.setRedirectURL(current);
		
}}
]]></script>
