        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
// Add your code here
	var orgUnit = new GlideRecord('x_153465_discovert_discover_office_hierarchy');
	orgUnit.addQuery('office_abbreviation', current.discover_office_hierarchy.getDisplayValue());
	orgUnit.query();
	
	
	//OU TA
	if (current.office_task_authority.changesTo('true')){ 
		if(orgUnit.next()){ 
			orgUnit.tasking_authorities = orgUnit.tasking_authorities + ',' + current.office_member;
			orgUnit.update();
		}
	}
	
	if (current.office_task_authority.changesTo('false')){ 
		if(orgUnit.next()){ 
			orgUnit.tasking_authorities = orgUnit.tasking_authorities.replace(current.office_member,'');
			orgUnit.update();
		}
	}
		

	
})(current, previous);]]></script>
