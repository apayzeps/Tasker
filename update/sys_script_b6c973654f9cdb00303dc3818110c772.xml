        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	// RAJ 2018-02-20 - STRY0010804 - Tasker - if Tasking Authoirty changes and the new tasking authority is internal, Update Primary Office to be the same as the Tasking Authority
	if(current.tasking_authority.external_flag == false){
		current.primary_office =current.tasking_authority.organizational_unit;
	}

	// RAJ 2018-02-13 if there was a Tasking Authority assigned, check if the task has children.
	if(current.calchaschildren > 0){
		// Find all children of this tasker 
		var grChildren = new GlideRecord('x_153465_discovert_route_task_instance');
		grChildren.addQuery('parent', current.sys_id);
		grChildren.query();
		
		while (grChildren.next()){
			// Update the Tasking Authority on all children
			grChildren.tasking_authority= current.tasking_authority;
			grChildren.update();
		}
	}
})(current, previous);]]></script>
